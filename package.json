    "@typescript-eslint/parser": "5.8.1",
    "eslint": "8.6.0",
    "prettier": "2.5.1",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^8.3.1",
    "serverless-plugin-typescript": "^1.2.0",
